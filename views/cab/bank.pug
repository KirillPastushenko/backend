extends layout
block content
  -
    const subjects = [{
      short: "inf", name: "Информатика"
    },{
      short: "math", name: "Математика (профиль)"
    },{
      short: "rus", name: "Русский язык"
    },{
      short: "mathb", name: "Математика (база)"
    },{
      short: "lit", name: "Литература"
    },{
      short: "eng", name: "Английский язык"
    },{
      short: "obs", name: "Обществознание"
    }]

  <div class="content-wrapper">
    <!-- Шапка страницы -->
    <section class="content-header">
      <h1>
        | Посмотреть задания из банка задач
      </h1>
      <br style="height:1px;">
      <small>Выберите интересующий вас раздел: </small>
    </section>

    <!-- Секция контента -->
    <section class="content">
      <form name="sender" method="POST">
        <select class="form-control" name="main">
          each subj in subjects
            <option value=`ex_${subj.short}`>#{subj.name}</option>
        </select>
        <br>
        <input type="submit" class="btn btn-primary btn-block btn-flat" value="Посмотреть" name="see">
      </form>



    </section>
    <!-- /.content -->
    </div>
