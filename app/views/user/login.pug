html
  head
    title Login
  body
    div#root
    style.
      #root {
        width: 280px;
        margin: 40px auto;
        padding: 10px;
      }
    script(async, src="//cdn.auth0.com/js/lock/10.3/lock.min.js", onload="onLoaded()")
    script.
      window.onLoaded = () => {
      let lock = new Auth0Lock(
        '#{process.env.AUTH0_CLIENT_ID}',
        '#{process.env.AUTH0_DOMAIN}',
        {
          auth: {
            redirectUrl: '#{process.env.AUTH0_CALLBACK_URL}',
            responseType: 'code',
            params: {
              scope: 'openid name email picture'
            }
          }
        }
      );
      lock.show();
      }
