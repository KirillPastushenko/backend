-
  const subjs = [{
    url: 'rus', name: 'Русский Язык'
  },{
    url: 'inf', name: 'Информатика'
  },{
    url: 'math', name: 'Математика'
  }]
mixin link(subj)
  a(href=`/exam/${subj.url}`).subj-link= subj.name

doctype html
html
  head
    title Все предметы
    meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    style(type="text/css"): :clean-css
      .task-wrap {
        border: 1px solid black;
        padding: 7px;
      }
      .task-wrap hr, hr.light {
        margin: 0;
        padding: 2px;
        height: .1px;
        width: .1p
      }
  body: .container
    h1 Предметы
    ul.exams: each subj in subjs
      li.subj: +link(subj)

