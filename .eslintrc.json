{
  "globals": {
    "window": true,
    "global": true
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "mocha": true,
    "amd": true,
    "jquery": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "installedESLint": true,
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "spread": true,
      "modules": true,
      "arrowFunction": true
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
